---
import NavBar from '../components/NavBar.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Where the madness take us" />
		<meta name="viewport" content="width=device-width" />
		<title>{title}</title>
	</head>
	<body class='min-h-full'>
		<header class='container m-auto flex flex-row justify-between py-8'>
			<h1 class='text-lg font-black'>Donde la locura nos lleve</h1>

			<NavBar />
		</header>
		<main>
			<slot />
		</main>
	</body>
</html>